<% include ../partials/header %>

<section>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center" class="new-blog-post">Edit <%=forSale.title%></h1>
        </div>
        <div class="row">
            <div style="width: 30%; margin: 25px auto">
                <form action="/for-sale/<%=forSale._id%>?_method=PUT" method='POST'>
                    <div class="form-group">
                        <input class="form-control"type='text'placeholder='author' name='forSale[author]' value="<%=forSale.author%>">
                    </div>        
                    <div class="form-group">
                        <input class="form-control"type='text'placeholder='title' name='forSale[title]' value="<%=forSale.title%>">
                    </div>                  
                    <div class="form-group">
                        <input class="form-control"type='text' placeholder='price' name='forSale[price]' value="<%=forSale.price%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control"type='text' placeholder='image' name='forSale[image]' value="<%=forSale.image%>">
                    </div>
                     <div class="form-group">
                         <input class="body-box-sizing form-control" rows="5" type='text' placeholder='body' name='forSale[body]' value="<%=forSale.body%>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit !!</button>
                    </div>
                </form>
                <a href="/for-sale">Go back</a>
            </div>
        </div>
    </div>
</section>
<% include ../partials/footer %>