<% include ../partials/header %>

<!-- banner goes here -->
    <section class="banner">
      <div class="innerBanner-bg" >
        <div class="container">
          <div class="banner-text">            
            <h1 class="pageTitle">Blog Piece</h1>
            <div class="breadcrumb-wrap">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="home">Home</a></li>
                <li class="breadcrumb-item active">Blog</li>
                <li class="breadcrumb-item active">Blog Piece</li>
              </ol>
            </div>
          </div>
        </div>
      </div>      
    </section>
<!-- banner ends here -->

    <!-- "BLOG CONTENT" goes here -->
    <section class="content content-gap-top content-gap-bottom two-column blog-sampleB">
      <div class="container">
        <div class="row">
          <div class="blog-sizing col-12 col-sm-12 col-md-8 col-lg-9 col-xl-9">
            <div class="content-area blog-content">
              <img src="<%=blog.image%>" alt="Blog Image" width="850" height="400" class="aligncenter">
              <div class="blog-header">
                <h2 class="blog-title"><%=blog.title%></h2>
                <div class="post-by">
                  <span>By <%= blog.author %></span><span><%= blog.type %></span><span><%= blog.created.toDateString() %></span>
                </div>
              </div>
              <% if(blog.quote) { %>
              <div class="testimonial blockquote">
                <div class="textbox">
                  <p><%=blog.quote.substring(0,100)%></p>
                </div>
              </div>
              <% } %>
              <p>
                  <%= blog.body %>
              </p>
            </div>
        <!-- "BLOG CONTENT" ends here -->  
        
        <!-- Update and Destory Routes starts here -->
         <% if(currentUser){ %>
          <a class="btn btn-xs btn-warning" href="/blog/<%=blog._id %>/edit">
              Edit
          </a>
          <form class="delete-form" action="/blog/<%=blog._id%>?_method=DELETE" method="POST">
          <Button class="btn btn-xs btn-danger">
              Delete
          </Button>
          </form> 
        <% } %>
          
        <!-- Update and Destory Routes ends here -->
          </div> 
        </div>
     </div>
</section>



<% include ../partials/footer %>