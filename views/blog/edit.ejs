<% include ../partials/header %>



<section>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center" class="new-blog-post">Edit <%=blog.title%></h1>
        </div>
        <div class="row">
            <div style="width: 30%; margin: 25px auto">
                <form action="/blog/<%=blog._id%>?_method=PUT" method='POST'>
                    <div class="form-group">
                        <input class="form-control"type='text'placeholder='author' name='blog[author]' value="<%=blog.author%>">
                    </div>        
                    <div class="form-group">
                        <input class="form-control"type='text'placeholder='title' name='blog[title]' value="<%=blog.title%>">
                    </div>                  
                    <div class="form-group">
                        <input class="form-control"type='text' placeholder='type' name='blog[type]' value="<%=blog.type%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control"type='text' placeholder='image' name='blog[image]' value="<%=blog.image%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control"type='text' placeholder='quote' name='blog[quote]' value="<%=blog.quote%>">
                    </div>
                     <div class="form-group">
                         <input class="body-box-sizing form-control" rows="5" type='text' placeholder='body' name='blog[body]' value="<%=blog.body%>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit !!</button>
                    </div>
                </form>
                <a href="/blog">Go back</a>
            </div>
        </div>
    </div>
</section>
<% include ../partials/footer %>