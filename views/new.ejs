<% include partials/header %>

<section>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center" class="new-blog-post">Create a New Blog Post</h1>
        </div>
        <div class="row">
            <div style="width: 30%; margin: 25px auto">
                <form action='/blog' method='POST'>
                    <div class="form-group">
                        <input class="form-control"type='text'placeholder='author' name='blog[author]'>
                    </div>        
                    <div class="form-group">
                        <input class="form-control"type='text'placeholder='title' name='blog[title]'>
                    </div>                  
                    <div class="form-group">
                        <input class="form-control"type='text' placeholder='type' name='blog[type]'>
                    </div>
                    <div class="form-group">
                        <input class="form-control"type='text' placeholder='image' name='blog[image]'>
                    </div>
                     <div class="form-group">
                        <input class="form-control"type='text' placeholder='body' name='blog[body]'>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit !!</button>
                    </div>
                </form>
                <a href="/blog">Go back</a>
            </div>
        </div>
    </div>
</section>
<% include partials/footer %>